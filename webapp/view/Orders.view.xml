<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.magenta_ProdConfirmation.controller.Orders"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>tiOrders}" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<Table id="tbOrders" items="{oProdOrdModel>/results}" growing="true" growingThreshold="20" growingScrollToLoad="true"
				backgroundDesign="Transparent" mode="MultiSelect" sticky="ColumnHeaders">
				<columns>
					<Column demandPopin="false" width="5rem">
						<Text text="{i18n>lblOrdno}"/>
					</Column>
					<Column demandPopin="false">
						<Text text="{i18n>lblPlant}"/>
					</Column>
					<Column demandPopin="false" width="4rem">
						<Text text="{i18n>lblResource}"/>
					</Column>
					<Column demandPopin="false">
						<Text text="{i18n>lblPhase}"/>
					</Column>
					<Column demandPopin="false">
						<Text text="{i18n>lblOrdType}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Desktop">
						<Text text="{i18n>lblMaterial}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Desktop">
						<Text text="{i18n>lblMatDesc}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Desktop">
						<Text text="{i18n>lblBatch}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet" hAlign="End">
						<Text text="{i18n>lblOrdQty}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet" hAlign="End">
						<Text text="{i18n>lblConfQty}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet" hAlign="End">
						<Text text="{i18n>lblToBeProd}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet" hAlign="End">
						<Text text="{i18n>lblYield}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet" hAlign="End">
						<Text text="{i18n>lblRework}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet" hAlign="End">
						<Text text="{i18n>lblScrap}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>lblScrapReason}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>lblProdDate}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{oProdOrdModel>Ordno}"/>
							<Text text="{oProdOrdModel>Plant}"/>
							<Text text="{oProdOrdModel>Resrc}"/>
							<Text text="{oProdOrdModel>Phase}"/>
							<Text text="{oProdOrdModel>Ordtype}"/>
							<Text text="{oProdOrdModel>Matcode}"/>
							<Text text="{oProdOrdModel>Matdesc}"/>
							<Text text="{oProdOrdModel>Batch}"/>
							<Text text="{oProdOrdModel>Ordqty}"/>
							<Text text="{oProdOrdModel>Confqty}"/>
							<Text text="{oProdOrdModel>Tobeprod}"/>
							<Input value="{oProdOrdModel>Yield}" type="Number" textAlign="End"/>
							<Input value="{oProdOrdModel>Rework}" type="Number" textAlign="End"/>
							<Input value="{oProdOrdModel>Scrap}" type="Number" textAlign="End"/>
							<Input value="{oProdOrdModel>Scraprsn}"/>
							<DatePicker value="{oProdOrdModel>Proddate}" displayFormat="dd/MM/yyyy"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button icon="sap-icon://print" text="{i18n>lblPrintLabels}" type="Default" press="onPrintLabelsPress"/>
				<Button icon="sap-icon://activity-2" text="{i18n>lblGoodsIssue}" type="Emphasized" press="onGoodsIssuePress"/>
				<Button icon="sap-icon://error" text="{i18n>lblBreakdown}" type="Reject" press="onBreakdownPress"/>
				<Button icon="sap-icon://sys-enter-2" text="{i18n>lblConfirmation}" type="Accept" press="onConfirmationPress"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>