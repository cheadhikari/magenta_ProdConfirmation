<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog id="ScrapReasonValueHelpDialog" noDataText="{i18n>lblNoData}" title="{i18n>lblSelectScrapReason}"
		search=".handleScrapReasonSearch" confirm=".handleScrapReasonClose" cancel=".handleScrapReasonClose"
		items="{oScrapRsnModel>/results}">
		<ColumnListItem>
			<cells>
				<ObjectIdentifier title="{oScrapRsnModel>Plant}"/>
				<ObjectIdentifier title="{oScrapRsnModel>Rsncode}"/>
				<Text text="{oScrapRsnModel>Rsntext}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>lblPlant}"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>lblReasonCode}"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>lblReasonText}"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>